<div class="col-md-6">
    <h3>UPDATE Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <textarea class="form-input" type="text" id="blog-name" name="blog-name">{{name}}</textarea>
      </div>
      <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{description}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{blog.id}}">UPDATE</button>
      </div>
    </form>
  </div>
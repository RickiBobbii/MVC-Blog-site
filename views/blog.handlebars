<div class="text-center card card-rounded">
  <h2 class="card-header">{{name}}</h2>
  <h4 class="card-body">{{description}}</h4>
  <p class="text-right mr-2">Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="text-center mt-5">
  {{#if logged_in}}
    <form class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label"></label>
        <textarea
          class="form-control"
          id="new-comment"
          rows="3"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Comment</button>
    </form>
  {{/if}}
</div>

<div class="text-center card card-rounded">
  <h2 class="card-header">{{name}}</h2>
  <h4 class="card-body">{{description}}</h4>
  <p class="text-right mr-2">Created by {{user.name}} on {{format_date date_created}}</p>
</div>
{{!-- Add comments section --}}
<div class="text-center">
  {{!-- <div class="col-md-6"> --}}
    <h5>Comments:</h5>
    {{#each comments as |comment|}}
    <div class="mb-2 text center">
      {{!-- <div class="col-md-6"> --}}
        <p class="text-right mr-2"><strong>{{comment.description}}</strong></p>
        <p class="text-right mr-2">Created by {{user.name}} on {{format_date date_created}}</p>
      {{!-- </div> --}}
    </div>
    {{/each}}
  {{!-- </div> --}}
</div>
<div class="text-center mt-5">
  {{#if logged_in}}
    <form class="mb-3 new-comment" data-id3="{{id}}">
      <div class="mb-3">
        <label for="comment-desc" class="form-label"></label>
        <textarea
          {{!-- class="form-input" --}}
          id="comment-desc"
          rows="3"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Comment</button>
    </form>
  {{/if}}
</div>
 <script src="/js/comment.js"></script>
